<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>web</artifactId>
    <packaging>war</packaging>
    <name>web</name>
    <description>A starter Java EE 6 webapp project for use on JBoss EAP 6, generated from the jboss-javaee6-webapp archetype</description>
    
    <parent>
    	<groupId>it.peruvianit.jee</groupId>
    	<artifactId>jee</artifactId>
    	<version>${global.version}</version>
  		<relativePath>../Master/pom.xml</relativePath>
    </parent>
    
    <build>
		<finalName>web</finalName>
	</build>
		
  	<dependencies>
        <dependency>
			<groupId>org.jboss.resteasy</groupId>
			<artifactId>resteasy-jaxrs</artifactId>
			<version>${jboss.resteasy.version}</version>
			<scope>provided</scope>
		</dependency>
		
		<dependency>
			<groupId>org.jboss.resteasy</groupId>
			<artifactId>resteasy-multipart-provider</artifactId>
			<version>${resteasy-multipart-provider.version}</version>
			<scope>provided</scope>
		</dependency>
		
		<dependency>
			<groupId>org.jboss.spec.javax.ejb</groupId>
			<artifactId>jboss-ejb-api_3.1_spec</artifactId>
			<version>${jboss-ejb-api.version}</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>javax</groupId>
			<artifactId>javaee-api</artifactId>
			<version>${javaee-api.version}</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>com.google.code.gson</groupId>
			<artifactId>gson</artifactId>
			<version>2.4</version>
		</dependency>

		<!-- PROJECT DEPENDENCIES -->
        <dependency>
        	<groupId>it.peruvianit.ejb</groupId>
        	<artifactId>authentication-client</artifactId>
        	<type>ejb</type>
        	<version>${global.version}</version>
        </dependency>
        <dependency>
        	<groupId>it.peruvianit.ejb</groupId>
        	<artifactId>authentication</artifactId>
        	<type>ejb</type>
        	<version>${global.version}</version>
        </dependency>
    </dependencies>
</project>
